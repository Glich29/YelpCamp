<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image url</label>
                <div class="input-group">
                    <span class="input-group-text" id="image-label">https://images.unsplash.com/photo-12345</span>
                    <input type="text" class="form-control" id="image" aria-describedby="image-label" name="campground[image]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="price-label" name="campground[price]">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Add Campground</button>    
            </div>
        </form>
        <a href="/campgrounds">All Campgrounds</a>
    </div>  
</div>